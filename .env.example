# Environment Variables
SITE_DOMAIN=bitcoinfrogs.art
BITCOIN_NETWORK=mainnet
UNISAT_API_KEY=
# Development helpers
MOCK_OWNER=true
MOCK_VERIFICATION=false

# X (formerly Twitter) OAuth v2
# Note: Code supports legacy TWITTER_* vars as fallback, but prefer X_*.
X_CLIENT_ID=
X_CLIENT_SECRET=
# Optional aliases if your app provides API key naming
X_API_KEY=
X_API_SECRET=
# Must match the callback configured in your X app
X_REDIRECT_URI=http://localhost:3000/api/x/callback
# Your project handle (account to follow)
X_APP_HANDLE=joinfroggys
# Phrase we look for in the user's recent posts to grant status
X_REQUIRED_TWEET_PHRASE=RIBBIT
# API base for X (default https://api.x.com)
X_API_BASE=https://api.x.com
